{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "type": "object",
      "description": "Represents a user's public profile information.",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        }
      },
      "required": ["displayName", "email"]
    },
    "Trade": {
      "title": "Trade",
      "type": "object",
      "description": "Represents a single trading transaction.",
      "properties": {
        "userId": { "type": "string", "description": "The ID of the user who made the trade." },
        "ticker": { "type": "string", "description": "The stock/crypto/forex ticker symbol." },
        "position": { "type": "string", "enum": ["Long", "Short"] },
        "assetType": { "type": "string", "enum": ["Saham", "Kripto", "Forex"] },
        "entryPrice": { "type": "number" },
        "exitPrice": { "type": "number" },
        "positionSize": { "type": "number" },
        "commission": { "type": "number" },
        "openDate": { "type": "string", "format": "date-time" },
        "closeDate": { "type": "string", "format": "date-time" },
        "createdAt": { "type": "string", "format": "date-time" },
        "strategy": { "type": "string" },
        "journalNotes": { "type": "string" },
        "executionRating": { "type": "number", "minimum": 1, "maximum": 5 }
      },
      "required": ["userId", "ticker", "position", "assetType", "entryPrice", "exitPrice", "positionSize", "createdAt"]
    },
    "EquityTransaction": {
      "title": "Equity Transaction",
      "type": "object",
      "description": "Represents a transaction that affects user's equity, like deposits or withdrawals.",
      "properties": {
        "userId": { "type": "string" },
        "type": { "type": "string", "enum": ["deposit", "transfer", "profit"] },
        "amount": { "type": "number" },
        "date": { "type": "string", "format": "date-time" },
        "notes": { "type": "string" }
      },
      "required": ["userId", "type", "amount", "date"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores user profile information."
    },
    "/users/{userId}/trades/{tradeId}": {
      "schema": { "$ref": "#/entities/Trade" },
      "description": "Stores individual trade records for each user."
    },
    "/users/{userId}/equityTransactions/{equityTransactionId}": {
      "schema": { "$ref": "#/entities/EquityTransaction" },
      "description": "Stores equity transactions like deposits and withdrawals for each user."
    }
  }
}
